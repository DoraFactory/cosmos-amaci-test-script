{
	"compilerOptions": {
		"target": "es2020",
		"module": "commonjs",
		"lib": ["es2020"],
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"declaration": true,
		"resolveJsonModule": true,
		"noImplicitAny": false
	},
	"include": ["src/**/*", "types.d.ts"],
	"exclude": ["node_modules", "**/*.spec.ts"]
}
